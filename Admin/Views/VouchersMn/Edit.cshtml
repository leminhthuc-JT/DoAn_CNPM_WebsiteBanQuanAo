@model GiamGia
@{
    ViewBag.Title = "Voucher";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mt-4">
    <div class="card-header bg-black text-white">
        <h4 class="fw-bold m-0">Thông tin Voucher</h4>
    </div>

    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.magg)

            <div class="mb-3">
                <label class="fw-bold">Mức giảm (%)</label>
                @Html.TextBoxFor(x => x.mucgiam, new { @class = "form-control", type = "number", max = "99" })
            </div>

            <div class="mb-3">
                <label class="fw-bold">Ngày bắt đầu</label>
                @Html.TextBoxFor(x => x.ngaybd, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>

            <div class="mb-3">
                <label class="fw-bold">Ngày kết thúc</label>
                @Html.TextBoxFor(x => x.ngaykt, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <button type="submit" class="btn btn-success">
                <i class="fa-solid fa-save"></i> Lưu
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">
                Quay lại
            </a>
        }
    </div>
</div>
