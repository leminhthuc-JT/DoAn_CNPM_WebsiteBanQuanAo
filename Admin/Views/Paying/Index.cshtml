        <div class="modal-actions">
            <a href="/Paying/Index?masp=@ViewBag.MaSP&&matk=@ViewBag.MaTK&&mam=@ViewBag.MaM&&mas=@ViewBag.MaS&&quantity=@ViewBag.SL&&search=@ViewBag.Search&&ship=@ViewBag.Ship&&gg=@ViewBag.GiamGia.magg&&tt=@ViewBag.TT" class="modal-btn modal-btn-cancel">
                Hủy
            </a>
            <a id="dataLink" href="#" class="modal-btn modal-btn-confirm"> <!--TSau khi xác nhận thì gọi hàm add đơn hàng thêm đơn hàng vào trong trạng thái đã thanh toán-->
                Xác nhận
            </a>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        const vouchers = document.querySelectorAll(".voucher-item");
        const btn = document.getElementById("btnXemThem");

        const SHOW_LIMIT = 2; // 1 hàng = 2 voucher (col-md-6)

        // Hiển thị mặc định
        vouchers.forEach((v, i) => {
            if (i < SHOW_LIMIT) {
                v.classList.add("show");
            }
        });

        let expanded = false;

        btn.addEventListener("click", function () {

            expanded = !expanded;

            vouchers.forEach((v, i) => {
                if (expanded || i < SHOW_LIMIT) {
                    v.classList.add("show");
                } else {
                    v.classList.remove("show");
                }
            });

            btn.innerText = expanded ? "Thu gọn" : "Xem thêm...";
        });
    });

    // Delete Cart Modal
    document.querySelectorAll('.QRbank').forEach(btn => {
        btn.addEventListener('click', () => {
            document.getElementById('modalOverlay').style.display = "flex";
        });
    });

    document.getElementById('modalOverlay').addEventListener('click', (e) => {
        if (e.target === e.currentTarget) {
            e.currentTarget.style.display = "none";
        }
    });
</script>
