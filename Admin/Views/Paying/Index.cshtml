@using Admin.Models
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var cart = ViewBag.Cart as List<CartItem>;
    var voucher = ViewBag.GiamGia as GiamGia;

    int selectedGG = voucher != null ? voucher.magg : 0;
    decimal ship = ViewBag.Ship != null ? (decimal)ViewBag.Ship : 0;
    string tt = ViewBag.TT ?? "";
}

<style>

    .btn-order {
        background-color: #414345;
        color: #ffffff;
        border: none;
    }

        .btn-order:hover {
            background-color: #654321;
            color: #ffffff;
        }

    .tech-card-header {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 14px 20px;
        font-size: 16px;
        font-weight: 600;
        color: #000;
    }

    .tech-card-body {
        position: relative;
        padding: 20px 24px;
    }

    .shipping-info-row {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 10px;
        font-size: 15px;
    }

        .shipping-info-row i {
            width: 20px;
            text-align: center;
            color: #333;
            font-size: 16px;
        }

        .shipping-info-row b {
            min-width: 130px;
            font-weight: 600;
        }

        .shipping-info-row span {
            color: #444;
        }

    .checkout-page {
        max-width: 1100px;
    }

    .box-option {
        border: 1px solid #ccc;
        padding: 12px;
        border-radius: 6px;
        cursor: pointer;
        transition: .2s;
    }

        .box-option:hover {
            border-color: #000;
        }

        .box-option:has(input:checked) {
            border: 2px solid #000;
            background: #f8f9fa;
        }

    .voucher-item {
        display: none;
    }

        .voucher-item.show {
            display: block;
        }

    .product-img {
        width: 80px;
        height: 80px;
        object-fit: contain;
    }

    .modal-overlay {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.6);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background: white;
        width: 420px;
        padding: 35px 30px;
        border-radius: 16px;
        text-align: center;
    }

    .modal-icon {
        font-size: 60px;
        color: #dc3545;
        margin-bottom: 15px;
    }

    .modal-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .modal-actions {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .modal-btn {
        padding: 10px 28px;
        border-radius: 8px;
        color: #414345;
        text-decoration: none;
        font-weight: 600;
    }

    .modal-btn-cancel {
        background: #6c757d;
    }

    .modal-btn-confirm {
        background: #dc3545;
    }
</style>

<div class="container checkout-page mt-5 pt-4">

    <h4 class="text-center fw-bold mb-4">THANH TOÁN GIỎ HÀNG</h4>

    <!--GIỎ HÀNG-->
    <div class="card mb-4 p-3">
        <h5 class="fw-bold mb-3">Sản phẩm trong giỏ hàng</h5>

        @foreach (var item in cart)
        {
            <div class="row align-items-center border-bottom py-2">
                <div class="col-md-2 text-center">
                    <img src="~/Content/ImageSP/@item.Image" class="product-img" />
                </div>
                <div class="col-md-4">@item.TenSP</div>
                <div class="col-md-2 text-center">x @item.SoLuong</div>
                <div class="col-md-2 text-end">@string.Format("{0:N0} VNĐ", item.Gia)</div>
                <div class="col-md-2 text-end fw-bold">@string.Format("{0:N0} VNĐ", item.ThanhTien)</div>
            </div>
        }
    </div>

    <!--THÔNG TIN NGƯỜI NHẬN-->
    <div class="card mb-4">
        <div class="tech-card-header">
            <h5 class="fw-bold mb-3">Thông tin giao hàng</h5>
        </div>
        <div class="tech-card-body position-relative">
            <div class="shipping-info-row">
                <i class="fa-solid fa-user"></i>
                <b>Tên người nhận:</b>
                <span>@ViewBag.TK.tenkh</span>
            </div>

            <div class="shipping-info-row">
                <i class="fa-solid fa-phone"></i>
                <b>Số điện thoại:</b>
                <span>@ViewBag.TK.sdt</span>
            </div>

            <div class="shipping-info-row">
                <i class="fa-solid fa-map-location-dot"></i>
                <b>Địa chỉ:</b>
                <span>@ViewBag.TK.diachi</span>
            </div>
        </div>
    </div>

    <!--GIAO HÀNG-->
    <form method="get" action="/Paying/Index">
        <input type="hidden" name="gg" value="@selectedGG" />
        <input type="hidden" name="tt" value="@tt" />

        <div class="card mb-4 p-3">
            <h5 class="fw-bold mb-3">Hình thức giao hàng</h5>
            <div class="row">
                <div class="col-md-6">
                    <label class="box-option d-block">
                        <input type="radio" name="ship" value="0" hidden
                               @(ship == 0 ? "checked" : "")
                               onchange="this.form.submit()" />
                        <b>Tiêu chuẩn</b><br>
                        <small>Ước tính giao hàng: 2 – 3 ngày làm việc</small><br />
                        <small><strong>Phí vận chuyển: </strong> 0 VNĐ</small>
                    </label>
                </div>
                <div class="col-md-6">
                    <label class="box-option d-block">
                        <input type="radio" name="ship" value="30000" hidden
                               @(ship == 30000 ? "checked" : "")
                               onchange="this.form.submit()" />
                        <b>Hỏa tốc</b><br />
                        <small>Ước tính giao hàng: khoảng 4 giờ kể từ khi đặt hàng<</small>
                        <small><strong>Phí vận chuyển: </strong> 30,000 VNĐ</small>
                    </label>
                </div>
            </div>
        </div>
    </form>

    <!--VOUCHER-->
    <form method="get" action="/Paying/Index">
        <input type="hidden" name="ship" value="@ship" />
        <input type="hidden" name="tt" value="@tt" />

        <div class="card mb-4 p-3">
            <h5 class="fw-bold mb-3">Mã giảm giá</h5>

            <div class="row" id="voucherList">
                @foreach (var g in ViewBag.GG as List<GiamGia>)
                {
                    bool isChecked = selectedGG == g.magg;

                    <div class="col-md-6 mb-2 voucher-item">
                        <label class="box-option d-block">
                            <input type="radio" name="gg" value="@g.magg" hidden
                                   @(isChecked ? "checked" : "")
                                   onchange="this.form.submit()" />
                            <b>Giảm @g.mucgiam %</b><br />
                            <small>@g.ngaybd - @g.ngaykt</small>
                        </label>
                    </div>
                }
            </div>

            <div class="text-center mt-2">
                <a href="javascript:void(0)" id="btnXemThem">Xem thêm</a>
            </div>
        </div>
    </form>

    <!--THANH TOÁN-->
    <form method="get" action="/Paying/Index">
        <input type="hidden" name="ship" value="@ship" />
        <input type="hidden" name="gg" value="@selectedGG" />

        <div class="card mb-4 p-3">
            <h5 class="fw-bold mb-3">Hình thức thanh toán</h5>

            @foreach (var pay in new[] {
                "Thanh toán khi nhận hàng (COD)",
                "Thanh toán ngân hàng",
                "Ví điện tử",
                "Thanh toán ví trả sau"
            })
            {
                <label class="box-option d-block mb-2">
                    <input type="radio" name="tt" value="@pay" hidden
                           @(tt == pay ? "checked" : "")
                           onchange="this.form.submit()" />
                    @pay
                </label>
            }
        </div>
    </form>

    <!--TỔNG TIỀN-->
    <div class="card p-3 mb-4">
        <h5 class="fw-bold mb-3">Chi tiết thanh toán</h5>

        <div class="d-flex justify-content-between">
            <span>Tiền hàng:</span>
            <span>@string.Format("{0:N0} VNĐ", ViewBag.TienHang)</span>
        </div>
        <div class="d-flex justify-content-between">
            <span>Vận chuyển:</span>
            <span>@string.Format("{0:N0} VNĐ", ship)</span>
        </div>
        <div class="d-flex justify-content-between">
            <span>Giảm giá:</span>
            <span>-@string.Format("{0:N0} VNĐ", ViewBag.TienGiam)</span>
        </div>

        <hr />
        <div class="d-flex justify-content-between text-danger fw-bold fs-5">
            <span>Tổng tiền:</span>
            <span>@string.Format("{0:N0} VNĐ", ViewBag.TongTien)</span>
        </div>
    </div>

    @if (tt == "Thanh toán ngân hàng" || tt == "Ví điện tử" || tt == "Thanh toán ví trả sau")
    {
        <button type="button"
                class="btn btn-order w-100 QRbank">
            ĐẶT HÀNG
        </button>
    }
    else
    {
        <form method="post" action="#">
            <button type="submit"
                    class="btn btn-order w-100">
                ĐẶT HÀNG
            </button>
        </form>
    }
</div>

<!--MODAL QR THANH TOÁN-->
<div id="modalQR" class="modal-overlay">
    <div class="modal-content">

        <div class="modal-icon">
            <i class="fa-solid fa-building-columns"></i>
        </div>

        <div class="modal-title">
            Vui lòng quét mã QR để thanh toán
        </div>

        <div class="text-center mb-3">
            <img src="@Url.Action(
                "QRThanhToan",
                "Paying",
                new {
                    soTien = ViewBag.TongTien,
                    noiDung = "Thanh toán đơn hàng"
                })"
                 width="250" />
        </div>

        <div class="modal-actions">

            <a href="@Url.Action("Index","Paying")"
               class="modal-btn modal-btn-cancel">
                Hủy
            </a>

            <a href="#"
               class="modal-btn modal-btn-confirm">
                Xác nhận
            </a>
        </div>

    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        const vouchers = document.querySelectorAll(".voucher-item");
        const btn = document.getElementById("btnXemThem");
        const LIMIT = 2;

        function showDefault() {
            vouchers.forEach((v, i) => {
                if (i < LIMIT) {
                    v.classList.add("show");
                } else {
                    v.classList.remove("show");
                }
            });
        }

        showDefault();

        let expanded = false;

        btn.addEventListener("click", function () {
            expanded = !expanded;

            if (expanded) {
                vouchers.forEach(v => v.classList.add("show"));
                btn.innerText = "Thu gọn";
            } else {
                showDefault();
                btn.innerText = "Xem thêm";
            }
        });
    });


        document.querySelectorAll('.QRbank').forEach(btn => {
            btn.addEventListener('click', function () {
                document.getElementById('modalQR').style.display = 'flex';
            });
        });

        document.getElementById('modalQR').addEventListener('click', function (e) {
            if (e.target === this) {
                this.style.display = 'none';
            }
        });
</script>
