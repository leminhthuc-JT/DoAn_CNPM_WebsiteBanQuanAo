<style>
    .checkout-page {
        max-width: 900px;
    }

    .line-title {
        border-top: 3px solid #222;
        width: 100%;
    }

    .product-img {
        max-height: 150px;
    }

    .box-option {
        border: 1px solid #ccc;
        padding: 12px;
        border-radius: 6px;
        cursor: pointer;
    }

        .box-option.active {
            border-color: #0d6efd;
        }

    .voucher-box {
        border: 1px solid #ccc;
        padding: 10px;
        border-radius: 6px;
        font-size: 14px;
    }

    .pay-option {
        width: 100%;
        border: 1px solid #ccc;
        margin-bottom: 8px;
        text-align: left;
    }

        .pay-option:hover {
            border-color: #000;
        }

    .btn-order {
        background: #000;
        color: #fff;
        font-size: 18px;
        padding: 12px;
    }

        .btn-order:hover {
            background: #222;
        }

    .box-option {
        border: 1px solid #ccc;
        padding: 12px;
        border-radius: 6px;
        cursor: pointer;
        transition: 0.2s;
    }

        .box-option:hover {
            border-color: #000;
        }

        .box-option input:checked + b,
        .box-option input:checked ~ * {
            color: #000;
        }

        .box-option:has(input:checked) {
            border: 2px solid #000;
            background-color: #f8f9fa;
        }

    .voucher-item {
        display: none;
    }

        .voucher-item.show {
            display: block;
        }

    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.6);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background: white;
        width: 400px;
        padding: 40px 30px;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        text-align: center;
        animation: modalSlideIn 0.3s ease;
    }


    .modal-icon {
        font-size: 70px;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .modal-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 30px;
    }

    .modal-actions {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .modal-btn {
        padding: 12px 30px;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
        display: inline-block;
    }

    .modal-btn-cancel {
        background: linear-gradient(135deg, #6c757d, #5a6268);
    }

        .modal-btn-cancel:hover {
            background: linear-gradient(135deg, #5a6268, #495057);
            transform: translateY(-2px);
            color: white;
        }

    .modal-btn-confirm {
        background: linear-gradient(135deg, #dc3545, #c82333);
    }

        .modal-btn-confirm:hover {
            background: linear-gradient(135deg, #c82333, #bd2130);
            transform: translateY(-2px);
