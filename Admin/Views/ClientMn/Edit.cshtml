@model TaiKhoan
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="m-0"><i class="fa-solid fa-user-gear"></i> Phân quyền & Thông tin chi tiết</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <!-- Giữ lại Mã TK để post về server -->
                    <input type="hidden" name="matk" value="@Model.matk" />

                    <div class="row">
                        <!-- Cột hiển thị thông tin (Read-only) -->
                        <div class="col-md-7 border-end">
                            <h5 class="text-muted mb-3">Thông tin khách hàng (Không thể sửa)</h5>

                            <div class="mb-3">
                                <label class="fw-bold">Họ và tên:</label>
                                <input type="text" class="form-control bg-light" value="@Model.tenkh" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold">Email:</label>
                                <input type="text" class="form-control bg-light" value="@Model.email" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold">Số điện thoại:</label>
                                <input type="text" class="form-control bg-light" value="@Model.sdt" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold">Địa chỉ:</label>
                                <textarea class="form-control bg-light" readonly rows="2">@Model.diachi</textarea>
                            </div>
                        </div>

                        <!-- Cột sửa quyền -->
                        <div class="col-md-5">
                            <h5 class="text-danger mb-3">Cấp quyền hệ thống</h5>

                            <div class="p-3 bg-light border rounded">
                                <p class="small text-muted">Vui lòng chọn vai trò cho tài khoản này:</p>

                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="maquyen" id="roleClient" value="2" @(Model.maquyen != 1 ? "checked" : "")>
                                    <label class="form-check-label fw-bold text-success" for="roleClient">
                                        <i class="fa-solid fa-user"></i> Khách hàng
                                    </label>
                                </div>
                                <hr />
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="maquyen" id="roleAdmin" value="1" @(Model.maquyen == 1 ? "checked" : "")>
                                    <label class="form-check-label fw-bold text-danger" for="roleAdmin">
                                        <i class="fa-solid fa-user-shield"></i> Quản trị viên
                                    </label>
                                </div>
                            </div>

                            <div class="mt-4 d-grid gap-2">
                                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-save"></i> Lưu phân quyền</button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

