@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Css/Login.css" rel="stylesheet" />

<div class="login-wrapper">

    <div class="text-center mb-3">
        <img src="~/Content/Image/logo_black.png" width="160" height="90" style="object-fit: cover;" />
    </div>

    <div class="login-title">Đăng nhập</div>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div class="mb-3">
            <label class="form-label">Tên đăng nhập</label>
            <input type="text" name="username" class="form-control" required placeholder="Nhập tên đăng nhập">
        </div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input type="password" name="password" class="form-control" required placeholder="Nhập mật khẩu">
        </div>

        <button type="submit" class="btn btn-login w-100 py-2">Đăng nhập</button>

        if (ViewBag.Error != null)
        {
            <div class="mt-3 text-danger text-center fw-bold">@ViewBag.Error</div>
        }
    }

    <div class="text-center mt-3">
        <a href="/Account/Register" style="text-decoration:none; color:#4e4376; font-weight:600;">
            Chưa có tài khoản? Đăng ký ngay
        </a>
    </div>
</div>
