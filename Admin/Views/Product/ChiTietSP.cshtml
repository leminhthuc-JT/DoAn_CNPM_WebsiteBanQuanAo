@model SanPham
@{
    ViewBag.Title = "ChiTietSP";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lienquan = (List<SanPham>)ViewBag.LQ;
    var TH = ViewBag.TH;
}
<style>
    /* Style cho phần tiêu đề */
    .product-header-line {
        border-top: 1px solid #000;
        margin-bottom: 20px;
        padding-top: 10px;
    }

    /* Style cho ảnh nhỏ */
    .thumb-img {
        width: 60px;
        height: 60px;
        object-fit: contain;
        border: 1px solid #eee;
        border-radius: 8px;
        padding: 5px;
        cursor: pointer;
        transition: 0.2s;
    }

        .thumb-img:hover {
            border-color: #000;
        }

    /* Nút bấm giống ảnh */
    .btn-add-cart {
        background-color: white;
        border: 1px solid #333;
        color: #333;
        font-weight: bold;
        border-radius: 5px;
        text-transform: uppercase;
    }

        .btn-add-cart:hover {
            background-color: #f8f9fa;
        }

    .btn-buy-now {
        background-color: black;
        border: 1px solid black;
        color: white;
        font-weight: bold;
        border-radius: 5px;
        text-transform: uppercase;
    }

        .btn-buy-now:hover {
            opacity: 0.8;
        }

    /* Style phần đánh giá */
    .review-box {
        border: 1px solid #333;
        border-radius: 8px;
        padding: 20px;
        position: relative;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        background-color: #007bff;
        border-radius: 50%;
        display: inline-block;
    }

    .review-thumbs img {
        width: 50px;
        height: 50px;
        border-radius: 5px;
        object-fit: cover;
        border: 1px solid #ddd;
        margin-right: 10px;
    }

    /* Thanh input phía dưới */
    .input-bar {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .btn-submit {
        background-color: black;
        color: white;
        font-weight: bold;
        border-radius: 5px;
        padding: 6px 20px;
    }

    .input-no-border {
        border: none;
        outline: none;
        flex-grow: 1;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 25px;
        margin-top: 20px;
    }

    .product-card {
        box-shadow: 0 3px 8px rgba(0,0,0,0.3);
        border-radius: 10px;
        padding: 15px;
        background: white;
        text-align: center;
        transition: 0.2s;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.35);
        }

        .product-card img {
            width: 100%;
            height: 200px;
            object-fit: contain;
        }

    .section-title {
        width: 300px;
        height: 50px;
        box-shadow: 0 6px 10px rgba(0,0,0,0.4);
        background-color: white;
        text-align: center;
        border-radius: 10px;
        line-height: 50px;
        font-weight: bold;
        font-size: 22px;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 25px;
        margin-top: 20px;
    }

    .product-card {
        box-shadow: 0 3px 8px rgba(0,0,0,0.3);
        border-radius: 10px;
        padding: 15px;
        background: white;
        text-align: center;
        transition: 0.2s;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.35);
        }

        .product-card img {
            width: 100%;
            height: 200px;
            object-fit: contain;
        }

        .product-card .title {
            margin-top: 10px;
            font-size: 18px;
            font-weight: bold;
            min-height: 65px;
            color: #000;
        }

        .product-card .price {
            margin-top: 5px;
            font-size: 17px;
            font-weight: bold;
            color: red;
        }
</style>
