
@model SanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mt-4 shadow">
    <div class="card-header bg-success text-white">
        <h4 class="m-0">Thêm mới Hàng Hoá</h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "QuanLySanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <!-- Cột trái: Thông tin cơ bản -->
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tên sản phẩm</label>
                            @Html.EditorFor(model => model.tensp, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.tensp, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Giá bán (VNĐ)</label>
                                @Html.EditorFor(model => model.giaban, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Số lượng tổng</label>
                                @Html.EditorFor(model => model.soluong, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mô tả sản phẩm</label>
                            @Html.TextAreaFor(model => model.mota, new { @class = "form-control", @rows = "5" })
                        </div>
                    </div>

                    <!-- Cột phải: Phân loại & Ảnh -->
                    <div class="col-md-4 border-start">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Danh mục (Category)</label>
                            @Html.DropDownList("madm", null, "--- Chọn Danh mục ---", htmlAttributes: new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Thương hiệu (Brand)</label>
                            @Html.DropDownList("math", null, "--- Chọn Thương hiệu ---", htmlAttributes: new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Loại sản phẩm</label>
                            @Html.DropDownList("maloai", null, "--- Chọn Loại ---", htmlAttributes: new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Nhà cung cấp</label>
                            @Html.DropDownList("mancc", null, "--- Chọn NCC ---", htmlAttributes: new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ảnh đại diện</label>
                            <input type="file" name="ImageFile" class="form-control" onchange="previewImage(this)" />
                            <div class="mt-2 text-center">
                                <img id="preview" src="~/Content/ImagesSP/no-image.png" style="max-width: 100%; height: 150px; object-fit: contain; display: none;" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-success px-5"><i class="fa-solid fa-save"></i> Lưu Sản Phẩm</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary px-4">Quay lại</a>
                </div>
            </div>
        }
    </div>
</div>

<script>
    // Script để xem trước ảnh khi chọn
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#preview').attr('src', e.target.result).show();
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

