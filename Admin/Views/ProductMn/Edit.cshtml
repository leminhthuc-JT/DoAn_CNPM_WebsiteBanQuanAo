
@model SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mt-4 shadow">
    <div class="card-header bg-primary text-white">
        <h4 class="m-0">Cập nhật Sản Phẩm: @Model.tensp</h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "QuanLySanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.masp)
            <!-- Quan trọng: Giữ lại ảnh cũ nếu không up ảnh mới -->
            @Html.HiddenFor(model => model.anhchinh)
            @Html.HiddenFor(model => model.ngaynhap)

            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên sản phẩm</label>
                        @Html.EditorFor(model => model.tensp, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Giá bán</label>
                            @Html.EditorFor(model => model.giaban, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Số lượng</label>
                            @Html.EditorFor(model => model.soluong, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mô tả</label>
                        @Html.TextAreaFor(model => model.mota, new { @class = "form-control", @rows = "5" })
                    </div>
                </div>

                <div class="col-md-4 border-start">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Danh mục</label>
                        @Html.DropDownList("madm", null, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <!-- Các dropdown khác tương tự... -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Thương hiệu</label>
                        @Html.DropDownList("math", null, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Ảnh sản phẩm</label>
                        <input type="file" name="ImageFile" class="form-control mb-2" onchange="previewImage(this)" />

                        <div class="text-center p-2 border bg-light">
                            <p class="small text-muted mb-1">Ảnh hiện tại / Ảnh mới:</p>
                            <img id="preview" src="~/Content/ImagesSP/@Model.anhchinh" style="max-width: 100%; height: 150px; object-fit: contain;" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3 text-center">
                <button type="submit" class="btn btn-primary px-5">Lưu thay đổi</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary px-4">Hủy</a>
            </div>
        }
    </div>
</div>

